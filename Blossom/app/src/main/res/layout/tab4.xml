<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <ImageView
        android:id="@+id/tab4ImageView"
        android:layout_width="99dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/blossom"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tab4TextView1"
        android:layout_width="253dp"
        android:layout_height="15dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/tab4ImageView"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tab4TextView2"
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/tab4ImageView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="14dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/tab4TextView1" />

    <TextView
        android:id="@+id/tab4TextView3"
        android:layout_width="257dp"
        android:layout_height="16dp"
        android:text="TextView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tab4TextView2"
        app:layout_constraintLeft_toRightOf="@+id/tab4ImageView"
        android:textColor="@android:color/black"
        android:layout_marginLeft="9dp" />
</android.support.constraint.ConstraintLayout>

