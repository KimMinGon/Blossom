<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kitcoop.lastproject1.Activity_LookForPassword">

    <TextView
        android:id="@+id/lookforpassword_Title"
        android:layout_width="213dp"
        android:layout_height="54dp"
        android:text="비밀번호찾기"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.503" />

    <TextView
        android:id="@+id/lookforpassword_TextView"
        android:layout_width="303dp"
        android:layout_height="41dp"
        android:text="가입시 사용한 ID(이메일)"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@+id/lookforpassword_Title"
        app:layout_constraintHorizontal_bias="0.507" />

    <EditText
        android:id="@+id/lookforpassword_Email"
        android:layout_width="317dp"
        android:layout_height="49dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="E-mail"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/lookforpassword_TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        />

    <Button
        android:id="@+id/lookforpassword_SendPassword"
        android:layout_width="145dp"
        android:layout_height="44dp"
        android:text="임시 비밀번호 발송"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lookforpassword_Email"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintVertical_bias="0.872" />
</android.support.constraint.ConstraintLayout>
